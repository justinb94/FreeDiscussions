<plugin:Panel x:Class="FreeDiscussions.Plugins.Download.Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeDiscussions.Plugins.Download"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
              xmlns:svg1="clr-namespace:SVGImage.SVG;assembly=DotNetProjects.SVGImage"
             xmlns:plugin="clr-namespace:FreeDiscussions.Plugin;assembly=FreeDiscussions.Plugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <plugin:Panel.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </plugin:Panel.Resources>

    <Grid>
        <TabControl Margin="0 3 0 0">
            <TabItem Header="Downloads">
                <DataGrid AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>

                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>

                        <DataGridTextColumn Binding="{Binding Size}" Width="80" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CanUserSort="False">
                            <DataGridTextColumn.Header>
                                <svg1:SVGImage Source="/FreeDiscussions.Plugins.Download;component/Resources/download.svg" Height="16" Width="16" Margin="3 0"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding TotalSize}" Width="80" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CanUserSort="False">
                            <DataGridTextColumn.Header>
                                <svg1:SVGImage Source="/FreeDiscussions.Plugins.Download;component/Resources/size.svg" Height="16" Width="16" Margin="3 0"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding TotalSize}" Width="80" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CanUserSort="False">
                            <DataGridTextColumn.Header>
                                <svg1:SVGImage Source="/FreeDiscussions.Plugins.Download;component/Resources/remaining.svg" Height="16" Width="16" Margin="3 0"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>                        
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Finished Downloads">
                <DataGrid AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>

                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>

                        <DataGridTextColumn Binding="{Binding TotalSize}" Width="80" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CanUserSort="False">
                            <DataGridTextColumn.Header>
                                <svg1:SVGImage Source="/FreeDiscussions.Plugins.Download;component/Resources/size.svg" Height="16" Width="16" Margin="3 0"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>

</plugin:Panel>
