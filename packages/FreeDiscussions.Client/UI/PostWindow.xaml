<Window x:Class="FreeDiscussions.Client.UI.PostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeDiscussions.Client"
        mc:Ignorable="d"
        Title="PostWindow" Height="419" Width="665" MinWidth="360" MinHeight="200">
    <Grid Margin="12,12,12,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>            
            <RowDefinition Height="*"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="0 0 3 3"/>


        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" BorderThickness="1" Height="20" Margin="0 -6 0 0">
            <TextBox.Foreground>
                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
            </TextBox.Foreground>
            <TextBox.Background>
                <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
            </TextBox.Background>
        </TextBox>


        <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="0 0 3 0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Email}" BorderThickness="1" Height="20" Margin="0 -6 0 0">
            <TextBox.Foreground>
                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
            </TextBox.Foreground>
            <TextBox.Background>
                <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
            </TextBox.Background>
        </TextBox>

        <TextBlock Text="Subject:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="0 0 3 0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Subject}" BorderThickness="1" Height="20" Margin="0 -6 0 0">
            <TextBox.Foreground>
                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
            </TextBox.Foreground>
            <TextBox.Background>
                <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
            </TextBox.Background>
        </TextBox>

        <TextBlock Text="Text:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Margin="0 0 3 0"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Body}" BorderThickness="1" Margin="0 -1 0 0" 
                 TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="true" SpellCheck.IsEnabled="True"
        >
            <TextBox.Foreground>
                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
            </TextBox.Foreground>
            <TextBox.Background>
                <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
            </TextBox.Background>
        </TextBox>

        <Button BorderThickness="1" Width="100" HorizontalAlignment="Right"  Grid.Row="4" Grid.Column="1" Content="Post Message" Click="Button_Click" Margin="0 3 3 0"/>
    </Grid>
</Window>
