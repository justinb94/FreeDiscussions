<local:Panel x:Class="FreeDiscussions.Client.UI.NewsgroupsContentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeDiscussions.Client.UI"
             xmlns:svg1="clr-namespace:SVGImage.SVG;assembly=DotNetProjects.SVGImage"
             mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="0" x:Name="ArticleContentRow"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 3 0 0">
            <!--<StackPanel.Background>
                    <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                </StackPanel.Background>-->
            <Button Style="{StaticResource TopButtonStyle}" Height="24" BorderThickness="0" Margin="0 0" Click="Button_Click">
                <Button.Background>
                    <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                </Button.Background>
                <Button.Content>
                    <Border Padding="3">
                        <StackPanel Orientation="Horizontal">
                            <svg1:SVGImage Source="/FreeDiscussions.Client;component/Resources/send.svg" Height="14" Width="14" Margin="3 0"/>
                            <TextBlock Margin="0 -2 6 0" Text="New Message...">
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Button.Content>
            </Button>
        </StackPanel>

        <ListBox Grid.Row="1" BorderThickness="0" Name="NewsgroupContentListBox" SelectionChanged="NewsgroupContentListBox_SelectionChanged" Background="Transparent" HorizontalContentAlignment="Stretch" SelectionMode="Single">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Reply" Click="ReplyButton_Click">
                        <MenuItem.Icon>
                            <svg1:SVGImage Source="/FreeDiscussions.Client;component/Resources/reply.svg" Height="14" Width="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,1" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>
                        <!--<svg1:SVGImage Grid.Column="0"  Source="/FreeDiscussions.Client;component/Resources/reply.svg" Height="18" Width="18" Margin="0 3"/>-->
                        <TextBlock Margin="3 0" Grid.Column="0" FontWeight="SemiBold" FontSize="12" Text="{Binding Subject}">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource PrimaryText}"/>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <TextBlock Margin="3 0" Grid.Column="1" FontWeight="SemiBold" FontSize="12" Text="{Binding Date}">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <GridSplitter x:Name="Splitter" HorizontalAlignment="Stretch" Grid.Row="2" Visibility="Hidden">
            <GridSplitter.Background>
                <SolidColorBrush Color="{StaticResource PrimaryText}"/>
            </GridSplitter.Background>
        </GridSplitter>

        <Grid Grid.Row="3" x:Name="ArticleGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="0" x:Name="ArticleGridToolbarRow"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.Background>
                <SolidColorBrush Color="{StaticResource SecondaryBackground}"/>
            </Grid.Background>
            
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 0">
                <!--<StackPanel.Background>
                    <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                </StackPanel.Background>-->
                <Button Style="{StaticResource TopButtonStyle}" x:Name="ReplyButton" Click="ReplyButton_Click" Height="24" BorderThickness="0" Margin="0 0">
                    <Button.Background>
                        <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                    </Button.Background>
                    <Button.Content>
                        <Border Padding="3">
                            <StackPanel Orientation="Horizontal">
                                <svg1:SVGImage Source="/FreeDiscussions.Client;component/Resources/reply.svg" Height="14" Width="14" Margin="3 0"/>
                                <TextBlock Margin="0 -2 6 0" Text="Reply">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Button.Content>
                </Button> 
                <Button x:Name="DownloadButton" Click="DownloadButton_Click" Visibility="Hidden" Style="{StaticResource TopButtonStyle}"  Height="24" Padding="3" BorderThickness="0" Margin="1 0">
                    <Button.Background>
                        <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                    </Button.Background>
                    <Button.Content>
                        <Border Padding="3">
                            <StackPanel Orientation="Horizontal">
                                <svg1:SVGImage Source="/FreeDiscussions.Client;component/Resources/download.svg" Margin="3 -3 0 0" Height="14" Width="14"/>
                                <TextBlock Margin="0 -2 6 0" Text="Download">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </StackPanel>

                        </Border>
                    </Button.Content>
                </Button>
            </StackPanel>
            
            <Border Grid.Row="1">
                <ScrollViewer>
                    <TextBlock Name="ArticleBody" Padding="6" FontSize="11" TextWrapping="WrapWithOverflow">
                        <TextBlock.Background>
                            <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                        </TextBlock.Background>
                    </TextBlock>
                </ScrollViewer>
            </Border>
        </Grid>

        <Grid Visibility="Hidden" x:Name="StatusMessageGrid" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.Background>
                <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
            </Grid.Background>
            <TextBlock x:Name="StatusMessage" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                </TextBlock.Foreground>
            </TextBlock>
        </Grid>
    </Grid>

</local:Panel>    

