<local:Panel x:Class="FreeDiscussions.Client.UI.NewsgroupsContentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeDiscussions.Client.UI"
             xmlns:svg1="clr-namespace:SVGImage.SVG;assembly=DotNetProjects.SVGImage"
             mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" BorderThickness="0" Name="NewsgroupContentListBox" SelectionChanged="NewsgroupContentListBox_SelectionChanged" Background="Transparent" HorizontalContentAlignment="Stretch" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,1" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--<svg1:SVGImage Grid.Column="0"  Source="/FreeDiscussions.Client;component/Resources/reply.svg" Height="18" Width="18" Margin="0 3"/>-->
                        <TextBlock Margin="3 0" Grid.Column="1" Foreground="#CFD8DB" FontWeight="SemiBold" FontSize="12" Text="{Binding Subject}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel.Background>
                <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
            </StackPanel.Background>
            <Button Style="{StaticResource TopButtonStyle}"  Height="24" Padding="3" BorderThickness="0" Margin="0 0">
                <Button.Background>
                    <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                </Button.Background>
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <svg1:SVGImage Source="/FreeDiscussions.Client;component/Resources/reply.svg" Height="14" Width="14" Margin="3 0"/>
                        <TextBlock Margin="0 -2 6 0" Text="Reply">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource TopButtonStyle}"  Height="24" Padding="3" BorderThickness="0" Margin="1 0">
                <Button.Background>
                    <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                </Button.Background>
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <svg1:SVGImage Source="/FreeDiscussions.Client;component/Resources/download.svg" Margin="3 -3 0 0" Height="14" Width="14"/>
                        <TextBlock Margin="0 -2 6 0" Text="Download">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>

        <Border Grid.Row="2" Background="WhiteSmoke">
            <TextBlock Name="ArticleBody" Margin="3" FontSize="11" TextWrapping="WrapWithOverflow"/>
        </Border>
    </Grid>

</local:Panel>    

