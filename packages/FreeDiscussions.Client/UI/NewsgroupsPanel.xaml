<local:Panel x:Class="FreeDiscussions.Client.UI.NewsgroupsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeDiscussions.Client.UI"
             xmlns:svg1="clr-namespace:SVGImage.SVG;assembly=DotNetProjects.SVGImage"
             mc:Ignorable="d">

    <Grid Grid.Column="0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" BorderThickness="0" Name="NewsgroupCategoryListBox" Background="Transparent" HorizontalContentAlignment="Stretch" SelectionMode="Single" SelectionChanged="NewsgroupCategoryListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,1" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="3 0" Grid.Column="0" FontWeight="SemiBold" FontSize="12" Text="{Binding Name}">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <GridSplitter.Background>
                <SolidColorBrush Color="{StaticResource SecondaryBackground}"/>
            </GridSplitter.Background>
        </GridSplitter>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="FilterNewsgroupsTextBox" TextChanged="FilterNewsgroupsTextBox_TextChanged"  Grid.Column="0" Grid.ColumnSpan="2" Padding="3 0" BorderThickness="1" Foreground="#CFD8DB" VerticalContentAlignment="Center" Text="" FontSize="12">
                <TextBox.Background>
                    <SolidColorBrush Color="{StaticResource PrimaryBackground}"/>
                </TextBox.Background>
                <TextBox.BorderBrush>
                    <SolidColorBrush Color="{StaticResource SecondaryBackground}"/>
                </TextBox.BorderBrush>
                <TextBlock.Foreground>
                    <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                </TextBlock.Foreground>
            </TextBox>
            <Border Grid.Column="1" HorizontalAlignment="Left">
                <svg1:SVGImage Source="/FreeDiscussions.Client;component/Resources/search.svg" Height="14" Width="14" Margin="0 3"/>
            </Border>
        </Grid>

        <ListBox Grid.Row="3" BorderThickness="0" SelectionChanged="NewsgroupListBox_SelectionChanged" Name="NewsgroupListBox" Background="Transparent" HorizontalContentAlignment="Stretch" SelectionMode="Single" >
            <!--SelectionChanged="NewsgroupCategoryListBox_SelectionChanged"-->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,1" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <svg1:SVGImage Source="/FreeDiscussions.Client;component/Resources/globe.svg" Height="14" Width="14" Margin="0 3"/>
                        <TextBlock Margin="3 0" Grid.Column="1" FontSize="12" Text="{Binding}">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource SecondaryText}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



    </Grid>

</local:Panel>
